<div class="card">
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
        html: { class: "signup-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

        <ul class="user-type-selection">
          <li><%= link_to "Recruiter", new_recruiter_registration_path %></li>
          <li><%= link_to "Applicant", new_applicant_registration_path %></li>
        </ul>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :name %><br />
            <%= f.text_field :name, placeholder: "Your first and last name...", required: true, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, placeholder: "Your work email...", required: true, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :contact_number %><br />
            <%= f.text_field :contact_number, placeholder: "Your work phone number...", required: true, class: "form-control" %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :company %><br />
            <%= f.text_field :company, placeholder: "Name of your company...", required: true, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "#{@minimum_password_length} characters minimum", required: true, class: "form-control" %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <% if @minimum_password_length %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Make it a good one!", required: true, class: "form-control" %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-8"></div>
          <div class="col-md-4">
            <div class="form-group">
              <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
            </div>
          </div>
        </div>
    <% end %>

      <div class="sign-in-escape">
        <%= render "recruiters/shared/links" %>
      </div>

  </div>
</div>



